{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"]  },
        "target": "es2016",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": ["es2016"],
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "./references.d.ts",
    ],
    "compileOnSave": false
}
